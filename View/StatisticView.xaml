<UserControl x:Class="QuanLyPhongTro.View.StatisticView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyPhongTro"
        mc:Ignorable="d"
             
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
           TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
             DataContext="{StaticResource StatisticVM}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Grid.Row="1" Background="LightGray">
        <materialDesign:Card Margin="5">
            <TabControl>
                <TabItem Header="Doanh thu">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <materialDesign:Card Grid.Column="1" Margin="0 5 5 0">
                            <WrapPanel Margin="5">
                                <RadioButton x:Name="MonthRadioButton" Content="Tháng" Margin="5"></RadioButton>
                                <ComboBox 
                                    ItemsSource="{Binding MonthYearList}" 
                                    SelectedItem="{Binding SelectedMonthYear}" 
                                    ItemStringFormat="MM/yyyy"
                                    Margin="5 5 15 -3" 
                                    materialDesign:HintAssist.Hint="Chọn tháng"
                                    IsEnabled="{Binding IsChecked, ElementName=MonthRadioButton}"/>
                                
                                <RadioButton x:Name="YearRadioButton" Content="Năm" Margin="5"></RadioButton>
                                <ComboBox 
                                    ItemsSource="{Binding YearList}" 
                                    SelectedItem="{Binding SelectedYear}" 
                                    ItemStringFormat="yyyy"
                                    Margin="5 5 15 -3" 
                                    materialDesign:HintAssist.Hint="Chọn năm"
                                    IsEnabled="{Binding IsChecked, ElementName=YearRadioButton}"/>
                                
                                <RadioButton x:Name="PeriodRadioButton" Content="Khoảng thời gian" Margin="5"></RadioButton>
                                <DatePicker 
                                    Margin="0 0 20 0" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Left" 
                                    Width="100" 
                                    materialDesign:HintAssist.Hint="Ngày bắt đầu" 
                                    materialDesign:TextFieldAssist.HasClearButton="True" 
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                    SelectedDate="{Binding DateFrom, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    IsEnabled="{Binding IsChecked, ElementName=PeriodRadioButton}"/>
                                <DatePicker 
                                    Margin="0 0 20 0" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Left" 
                                    Width="100" 
                                    materialDesign:HintAssist.Hint="Ngày kết thúc" 
                                    materialDesign:TextFieldAssist.HasClearButton="True" 
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                                    SelectedDate="{Binding DateTo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    IsEnabled="{Binding IsChecked, ElementName=PeriodRadioButton}"/>
                                
                                <Button Command="{Binding SearchContractCommand}" Content="Lọc" Margin="5" Width="120" Background="#685B57"></Button>
                            </WrapPanel>
                        </materialDesign:Card>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            
                            <materialDesign:Card Grid.Column="0" Margin="0 0 2 0">
                                <GroupBox Margin="16" Header="Danh sách phòng">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ListView ItemsSource="{Binding ContractList}" SelectedItem="{Binding SelectedContract, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Header="Phòng" DisplayMemberBinding="{Binding Room.RoomNumber}"></GridViewColumn>
                                                    <GridViewColumn Header="Doanh thu (VND)" DisplayMemberBinding="{Binding ContractCode}"></GridViewColumn>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </ScrollViewer>
                                </GroupBox>
                            </materialDesign:Card>
                            
                            <materialDesign:Card Grid.Column="1" Margin="2 0 0 0">
                                <GroupBox Margin="16" Header="Chi tiết hợp đồng">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0" Grid.Row="0">
                                            <TextBox IsEnabled="{Binding IsEditable}" Text="{Binding SelectedRoom.RoomNumber, UpdateSourceTrigger=PropertyChanged}" Margin="5 5 15 5" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Phòng" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                        </Grid>
                                        <Grid Grid.Column="1" Grid.Row="0">
                                            <TextBox Text="{Binding Deposit, UpdateSourceTrigger=PropertyChanged}" Margin="5 5 15 5" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Tiền cọc" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                        </Grid>
                                        <Grid Grid.Column="0" Grid.Row="1">
                                            <DatePicker Margin="0 0 20 0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" materialDesign:HintAssist.Hint="Ngày bắt đầu" materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                        </Grid>
                                        <Grid Grid.Column="1" Grid.Row="1">
                                            <DatePicker Margin="0 0 20 0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" materialDesign:HintAssist.Hint="Ngày kết thúc" materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                        </Grid>
                                        <Grid Grid.Column="0" Grid.Row="2">
                                            <ComboBox ItemsSource="{Binding TenantList}" SelectedItem="{Binding SelectedTenant}" DisplayMemberPath="DisplayName" SelectedValuePath="Id" Margin="5 5 15 -3" materialDesign:HintAssist.Hint="Khách thuê"/>
                                        </Grid>
                                        <Grid Grid.Column="1" Grid.Row="2">
                                            <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" Margin="5 5 15 5" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Bên cho thuê" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                        </Grid>
                                        <Grid Grid.Column="0" Grid.Row="3">
                                            <ComboBox ItemsSource="{Binding ContractStatusList}" SelectedItem="{Binding Status}" DisplayMemberPath="DisplayName" SelectedValuePath="Value" Margin="5 5 15 -3" materialDesign:HintAssist.Hint="Trạng thái"/>
                                        </Grid>
                                        <Grid Grid.Column="1" Grid.Row="3">
                                            <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" Margin="5 5 15 5" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Bên cho thuê" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </materialDesign:Card>
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="Phòng">
                    <StackPanel Margin="10">
                        <TextBlock Text="Tổng số phòng: " FontSize="14"/>
                        <TextBlock Text="{Binding TotalRooms}" FontSize="20" FontWeight="Bold"/>

                        <TextBlock Text="Số phòng đang thuê:" FontSize="14" Margin="0 10 0 0"/>
                        <TextBlock Text="{Binding OccupiedRooms}" FontSize="20" FontWeight="Bold"/>

                        <TextBlock Text="Phòng trống:" FontSize="14" Margin="0 10 0 0"/>
                        <TextBlock Text="{Binding AvailableRooms}" FontSize="20" FontWeight="Bold"/>

                        <TextBlock Text="Tỉ lệ sử dụng: " Margin="0 10 0 0"/>
                        <ProgressBar Value="{Binding RoomUsageRate}" Maximum="100" Height="20"/>
                        <TextBlock Text="{Binding RoomUsageRate, StringFormat='{}{0:F1}%'}" FontSize="14"/>
                    </StackPanel>
                </TabItem>

            </TabControl>
        </materialDesign:Card>
    </Grid>
</UserControl>
