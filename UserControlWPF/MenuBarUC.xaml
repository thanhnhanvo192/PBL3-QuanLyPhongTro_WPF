<UserControl x:Class="QuanLyPhongTro.UserControlWPF.MenuBarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuanLyPhongTro.UserControlWPF"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}"
             DataContext="{StaticResource MainVM}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d">
    <Grid Grid.Row="0">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">

            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="2 4 2 4"></Setter>
                </Style>
            </Grid.Resources>

            <WrapPanel>
                <Button Grid.Column="0" Command="{Binding RoomCommand}" ToolTip="Phòng" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock HorizontalAlignment="Center">Phòng</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="HomeGroup" Width="24" Height="24" HorizontalAlignment="Center" Margin="0,0,18,0" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>

                <Button Grid.Column="1" Command="{Binding TenantWindowCommand}" ToolTip="Khách thuê" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock>Khách thuê</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="NaturePeople" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>

                <Button Grid.Column="2" Command="{Binding InvoiceViewCommand}" ToolTip="Hoá đơn" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock>Hoá đơn</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="CashSync" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>

                <Button Grid.Column="2" Command="{Binding ContractViewCommand}" ToolTip="Hợp đồng" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock>Hợp đồng</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="FileSign" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>

                <Button Grid.Column="2" Command="{Binding ServiceWindowCommand}" ToolTip="Dịch vụ" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock>Dịch vụ</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="DogService" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>

                <Button Grid.Column="2" Command="{Binding UnitWindowCommand}" ToolTip="Đơn vị đo" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock>Đơn vị đo</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="MagazinePistol" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>

                <Button Grid.Column="2" Command="{Binding FixViewCommand}" ToolTip="Sửa chữa" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock>Sửa chữa</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="WrenchCogOutline" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>

                <Button Grid.Column="2" Command="{Binding PunishWindowCommand}" ToolTip="Xử phạt" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock>Xử phạt</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="BlockHelper" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>
                <Button Grid.Column="2" Command="{Binding StatisticWindowCommand}" ToolTip="Thống kê" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock>Thống kê</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="InvoiceTextEdit" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>

                <Button Grid.Column="3" Command="{Binding UserCommand}" ToolTip="Tài khoản" Width="100">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="24"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock>Tài khoản</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <materialDesign:PackIcon Kind="AccountDetails" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Button>

            </WrapPanel>

        </Grid>
    </Grid>
</UserControl>
