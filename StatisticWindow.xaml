<Window x:Class="QuanLyPhongTro.StatisticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyPhongTro"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:QuanLyPhongTro.UserControlWPF"
           TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        
        Name="statisticWindow"
        Title="Thống kê" Height="700" Width="1200">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Border Background="#685B57" Padding="5">
                            <TextBlock Text="{Binding}" Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=statisticWindow}"></uc:ControlBarUC>
        </Grid>

        <Grid Grid.Row="1" Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5 5 5 0">
                <WrapPanel>
                    <materialDesign:Card Grid.Column="1" Margin="2 0 0 0">
                        <WrapPanel Margin="5">
                            <DatePicker
                              Width="100"
                              materialDesign:HintAssist.Hint="Ngày bắt đầu"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                              />
                            <DatePicker
                              Width="100"
                              materialDesign:HintAssist.Hint="Ngày kết thúc"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                              />
                            <RadioButton Margin="20 5 15 5" Content="Tháng"></RadioButton>
                            <RadioButton Margin="20 5 15 5" Content="Năm"></RadioButton>
                            <Button Command="{Binding DeleteCommand}" Content="Tìm" Margin="5" Width="100" Background="#685B57"></Button>
                        </WrapPanel>
                    </materialDesign:Card>
                </WrapPanel>
            </Grid>

            <materialDesign:Card Grid.Row="1" Margin="5">
                <GroupBox Margin="16" Header="Danh sách phòng">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView ItemsSource="{Binding List}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}"></GridViewColumn>
                                    <GridViewColumn Header="Số phòng" DisplayMemberBinding="{Binding RoomNumber}"></GridViewColumn>
                                    <GridViewColumn Header="Giá thuê" DisplayMemberBinding="{Binding Price}"></GridViewColumn>
                                    <GridViewColumn Header="Diện tích" DisplayMemberBinding="{Binding Area}"></GridViewColumn>
                                    <GridViewColumn Header="Số người ở tối đa" DisplayMemberBinding="{Binding MaxOccupants}"></GridViewColumn>
                                    <GridViewColumn Header="Trạng thái" DisplayMemberBinding="{Binding Status}"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </GroupBox>
            </materialDesign:Card>
        </Grid>

    </Grid>
</Window>
